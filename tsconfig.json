{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom"]
    },
    "include": ["src/**/*", "src/**/*.vue"]
}
